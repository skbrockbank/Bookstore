@model IEnumerable<string>

<a class="btn btn-outline-secondary"
   asp-action="Index" asp-controller="Home" asp-route-category="">
    Home
</a>

@foreach (string category in Model)
{
    <a class="btn btn-outline-secondary @(category == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index" asp-controller="Home" asp-route-category="@category" asp-route-pageNum="1">
        @category
    </a>
}